<%- include ('partials/_header') %>
<%- include ('partials/_nav') %>
    <main>
        <div class="container">
            <div class="row  text-center">
                <div class="col-md-12 row text-white">
                    <div class="col-lg-6">
                        <!--FORMULARIO-->
                        <h2 class="mb-3">Agregar - Producto</h2>
                        <form action="/agregar" method="post" class="mb-3">
                            <div class="mb-3">
                                <input class="form-control" type="text" name="nombre" placeholder="Juanito">
                            </div>
                            <div class="mb-3">
                                <input class="form-control" type="text" name="precio" placeholder="$ 0">
                            </div>
                            <div class="mb-3">
                                <input class="form-control" type="text" name="imagen" placeholder="/dircn">
                            </div>
                            <div class="mb-3">
                                <input class="form-control" type="text" name="categoria" placeholder="Categoria">
                            </div>
                            <div class="mb-3">
                                <input class="form-control" type="text" name="descripcion" placeholder="Descripcion">
                            </div>
                            <button type="submit" class="btn btn-primary">Agregar</button>
                        </form>
                    </div>
                    <div class="col-lg-6">
                        <!--TABLA-->
                        <table class="table text-white">
                            <h2>Productos</h2>
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">accion</th>
                                </tr>
                            </thead>
                            
                            <tbody> 
                                <% for(var i=0; i < tasks.length; i++) { %>
                                <tr>
                                    <td><%= i + 1%></td>
                                    <td><strong><%= tasks[i].nombre %></strong></td>
                                    <td>
                                        <a href="/ver/<%= tasks[i]._id %>" class="btn btn-primary">Ver</a>
                                        <a href="/modificar/<%= tasks[i]._id %>" class="btn btn-success">Modificar</a>
                                        <a href="/eliminar/<%= tasks[i]._id %>" class="btn btn-danger">Eliminar</a>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>
<%- include ('partials/_footer') %>